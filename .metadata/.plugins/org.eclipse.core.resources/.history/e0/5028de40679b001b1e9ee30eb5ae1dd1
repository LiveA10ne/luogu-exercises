package 二分;

import java.io.*;
import java.util.Arrays;


public class 砍树 {
	
	private static int n;
	private static int m;
	private static int[] arr;

	public static void main(String[] args) throws IOException {
		// TODO Auto-generated method stub
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
		StreamTokenizer st = new StreamTokenizer(br);
		PrintWriter pw = new PrintWriter(new BufferedWriter(new OutputStreamWriter(System.out)));
		
		st.nextToken(); 
		n = (int)st.nval;
		st.nextToken();
		m = (int)st.nval;
		arr = new int[n];
		int longest = 0;
		for (int i = 0; i < n; i++) {
			st.nextToken();
			arr[i] = (int)st.nval;
			if (arr[i] > longest) {
				longest = arr[i];
			}
		}
		
		
		int left = longest - m;
		while (longest >= left) {
			int sum = 0;
			int mid = (longest + left) / 2;
			for (int i = 0; i < n; i++) {
				if (arr[i] > mid) {
					sum += arr[i] - mid;
				}
			}if (sum >= m) {
				left = mid + 1;
			}else if (sum < m) {
				longest = mid - 1;
			}
		}
		
		pw.print(left - 1);
		pw.close();
	}
}
	
